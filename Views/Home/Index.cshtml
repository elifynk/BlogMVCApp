@model IEnumerable<BlogMvcApp.Models.BlogModel>
@{
    ViewBag.Title = "Index";
}

<h2>Blog Listesi</h2>

<div class="row">
    <div class="col-md-8">
        @foreach (var blog in Model)
        {
        <div class="blog">
            <h3>
                @blog.Baslik
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @blog.EklenmeTarihi
            </p>
            <hr />
            <img class="img-responsive" src="https://picsum.photos/300/900" />
            <p>
                @blog.Aciklama
            </p>
            @Html.ActionLink("Daha Fazla...", "Details", "Blog", new { id = @blog.Id }, new { @class= "btn btn-primary" })
            <button class="btn btn-primary">Daha Fazla...</button>
        </div>
        }
    </div>
    <div class="col-md-4">

    </div>
</div>